<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/timeTableName"
        android:layout_width="753dp"
        android:layout_height="60dp"
        android:layout_weight="66.66"
        android:background="#80B8DF"
        android:gravity="center"
        android:text="Time Table Name"
        android:textAlignment="center"
        android:textColor="#000000" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.33">

        <TextView
            android:id="@+id/timeTableStartStation"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#80B8DF"
            android:gravity="center"
            android:text="start Station"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/timeTableEndStation"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#80B8DF"
            android:gravity="center"
            android:text="End Station"
            android:textColor="#000000" />

    </LinearLayout>

</LinearLayout>