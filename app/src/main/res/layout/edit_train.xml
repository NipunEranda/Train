<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTrain">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/editTrainName"
        android:layout_width="220dp"
        android:layout_height="41dp"
        android:background="@drawable/custom_textboder"
        android:ems="10"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/EditTname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/EditTname" />

    <EditText
        android:id="@+id/editTrainStart"
        android:layout_width="220dp"
        android:layout_height="41dp"
        android:background="@drawable/custom_textboder"
        android:ems="10"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/EditSname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/EditSname" />

    <EditText
        android:id="@+id/editTrainEnd"
        android:layout_width="220dp"
        android:layout_height="41dp"
        android:background="@drawable/custom_textboder"
        android:ems="10"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/EditEname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/EditEname" />

    <TextView
        android:id="@+id/EditTname"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="68dp"
        android:text="Train Name"
        android:textColor="#455A64"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EditSname"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="44dp"
        android:text="Starting Station"
        android:textColor="#455A64"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTname" />

    <TextView
        android:id="@+id/EditEname"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="44dp"
        android:text="Destination"
        android:textColor="#455A64"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditSname" />

    <Button
        android:id="@+id/udateTbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="108dp"
        android:text="@string/saveBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditEname" />

    <Button
        android:id="@+id/cancelTbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:backgroundTint="@color/lightgrey"
        android:text="@android:string/cancel"
        app:layout_constraintBaseline_toBaselineOf="@+id/udateTbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toEndOf="@+id/udateTbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>