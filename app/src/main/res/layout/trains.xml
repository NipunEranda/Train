<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tablefragmentcover" />

    <Button
        android:id="@+id/viewTbtn"
        android:layout_width="147dp"
        android:layout_height="140dp"
        android:layout_marginStart="48dp"
        android:background="@color/white"
        android:drawableTop="@drawable/trainview"
        android:fontFamily="@font/syncopate"
        android:gravity="center|bottom"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:shadowRadius="0"
        android:text="View Trains"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textDirection="firstStrongLtr"
        app:layout_constraintBaseline_toBaselineOf="@+id/addTbtn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/autour_one"
        android:text="Trains"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/addTbtn"
        android:layout_width="147dp"
        android:layout_height="140dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        android:drawableTop="@drawable/addtrain"
        android:fontFamily="@font/syncopate"
        android:gravity="center|bottom"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:shadowRadius="0"
        android:text="Add Train"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textDirection="firstStrongLtr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="169dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:srcCompat="@drawable/appico" />

</androidx.constraintlayout.widget.ConstraintLayout>